generator client {
  provider = "prisma-client-js"
}


model Users {
  id        String  @id @default(uuid())
  name      String
  email     String  @unique
  password  String?
  notes     Note[]
  papers    PYP[]
  solutions Solution[]
  profilePicture String
  createdAt DateTime @default(now())
}

model Note {
  id           String  @id @default(uuid())
  title        String
  subject      String
  year         String
  uploadedBy   Users   @relation(fields: [uploadedById], references: [id])
  uploadedById String
  fileUrl      String
  createdAt    DateTime @default(now())
}

model PYP {
  id          String  @id @default(uuid())
  title       String
  subject     String
  year        String
  uploadedBy  Users   @relation(fields: [uploadedById], references: [id])
  uploadedById String
  fileUrl     String
  solutions   Solution[]
  // upvotes     Int     @default(0)
  createdAt   DateTime @default(now())
}

model Solution {
  id          String  @id @default(uuid())
  title       String
  uploadedBy  Users   @relation(fields: [uploadedById], references: [id])
  uploadedById String
  pyp         PYP    @relation(fields: [pypId], references: [id])
  pypId       String
  fileUrl     String
  createdAt   DateTime @default(now())
}

model Upvote {
  id        String  @id @default(uuid())
  userId    String
  entityId  String  // ID of the content being upvoted
  entityType String // Type of content ('note', 'solution', etc.)
  @@unique([userId, entityId, entityType]) // Ensures one upvote per user per entity
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
